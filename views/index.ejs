<!-- index.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="/style.css" />
    <title>Star Wars Quote App</title>
  </head>

  <body>
    <div class="header">
      <h1 class="title">May Node and Express be with you.</h1>
    </div>

    <div class="row">
      <div class="box add-quote-box">
        <h2 class="box-title">Add quote</h2>
        <form class="collect" action="/quotes" method="POST">
          <input class="collect" type="text" placeholder="name" name="name" />
          <input class="collect" type="text" placeholder="quote" name="quote" />
          <br />
          <button type="submit">Submit</button>
        </form>
      </div>

      <div class="box darth-invades-box">
        <h2 class="box-title">Darth Vader invades!</h2>
        <p>Replace first Yoda's quote with a quote written by Darth Vader</p>
        <button id="update-button">Replace Yoda's quote</button>
      </div>

      <div class="box remove-vader-box">
        <h2 class="box-title">Remove Darth Vader!</h2>
        <p>
          Delete one Darth Vader's quote.
          <br />Does nothing if there are no more <br />Darth Vader's quote
        </p>
        <div id="message"></div>
        <button id="delete-button">Delete Darth Vader's quote</button>
      </div>
    </div>

    <div class="quotes-box">
      <h2>Quotes</h2>
      <ul class="quotes">
        <!-- Loop through quotes -->
        <% for(var i = 0; i < quotes.length; i++) {%>
        <li class="quote">
          <!-- Output name from the iterated quote object -->
          <span><%= quotes[i].name %></span>:
          <!-- Output quote from the iterated quote object -->
          <span><%= quotes[i].quote %></span>
        </li>
        <% } %>
      </ul>
    </div>

    <script src="/main.js"></script>
  </body>
</html>
